#!/usr/bin/env bash
# This script displays the content of the current directory in a list format, showing only part of the name after the first dash

# Loop with for to iterate over files in the current directory
for file in *; do
    # Check if the file is not hidden and has a dash in the name
    if [[ ! $file =~ ^\. && $file =~ .*-.* ]]; then
        # Extract the part of the name after the first dash
        name_part=$(echo "$file" | cut -d'-' -f2-)
        
        # Display the extracted name part
        echo "$name_part"
    fi
done

