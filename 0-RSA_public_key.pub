#!/usr/bin/env bash
# Script to generate SSH RSA key pair

# Check if the RSA key pair already exists
if [ ! -f ~/.ssh/id_rsa ]; then
    # Generate RSA key pair
    ssh-keygen -t rsa -b 2048 -f ~/.ssh/id_rsa -N "" -C "werecyril20@gmail.com"

    # Display success message
    echo "RSA key pair generated successfully."
else
    echo "RSA key pair already exists. Skipping generation."
fi

# Save the public key to a file
cat ~/.ssh/id_rsa.pub > 0-RSA_public_key.pub

# Display instructions for adding the public key to intranet profile
echo "Add the following public key to your intranet profile:"
cat 0-RSA_public_key.pub

# Reminder: Keep the private key secure and consider adding a passphrase

